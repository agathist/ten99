---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

type Props = {
  description?: string
  title: string
}

const DEFAULT_DESCRIPTION =
  'Ten99.dev is the place for software engineers who love to work on contract to connect with other contractors, find community, build teams, exchange work, share advice, and thrive independently and together.'

const { description = DEFAULT_DESCRIPTION, title } = Astro.props
---

<!doctype html>
<html class="h-full" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-full flex-col">
    <slot />
  </body>
</html>
